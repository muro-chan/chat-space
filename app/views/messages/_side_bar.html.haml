.Side-bar
  .Side-bar__user-name
    .Side-bar__list
      %h3.Side-bar__name
        = current_user.name
    %ul.Side-bar__iconlist
      %li.Side-bar__icon
        = link_to new_group_path do
          = icon('far','edit')
      %li.Side-bar__icon
        = link_to edit_user_path(current_user) do
          = icon('fas','cog')
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Side-bar__group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

